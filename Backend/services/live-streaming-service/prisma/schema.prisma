generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model yahan se HATA diya gaya hai.

model LiveStream {
  id          String  @id @default(cuid())
  title       String
  description String?
  tags        String[] @default([]) // Stream ke tags store karenge
  thumbnailUrl String? // Thumbnail image ka URL
  processed Boolean @default(false)
  streamKey   String @unique
  playbackId  String @unique
  muxStreamId String @unique

  isLive Boolean @default(false)
  processed Boolean @default(false) // Track if VOD post has been created
  
  // Yahan User se relation nahi, sirf userId hai
  userId String 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}