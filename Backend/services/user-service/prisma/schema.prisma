// path: user-service/prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  // Keep binaryTargets as per your deployment needs
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  clerkId        String          @unique
  email          String          @unique
  name           String?
  imageUrl       String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  
  // Relation name remains the same
  creatorProfile CreatorProfile? @relation("UserCreatorProfile")

  @@index([email])
  @@index([clerkId])
}

model CreatorProfile {
  id           String   @id @default(cuid())
  pageName     String   @unique
  pageUrl      String   @unique
  status       String   @default("DRAFT") // 'DRAFT', 'ACTIVE'

  // === REQUIRED FIELDS ARE ALREADY HERE ===
  profileImageUrl String?  // For the Profile photo
  bannerUrl       String?  // For the new Cover photo step
  bio             String?  @db.Text // For the page description
  onboardingStep  Int      @default(2) // Tracks progress (Step 2 is the start)

  // Social Links
  youtubeUrl   String?
  instagramUrl String?
  twitterUrl   String?
  facebookUrl  String?
  twitchUrl    String?
  tiktokUrl    String?

  // Relation
  userId       String   @unique
  user         User     @relation("UserCreatorProfile", fields: [userId], references: [id])

  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}