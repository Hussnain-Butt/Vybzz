// path: user-service/prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  // Keep binaryTargets as per your deployment needs
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  clerkId        String          @unique
  email          String          @unique
  name           String?
  imageUrl       String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  
  // Relation ka naam wahi rehne diya hai jo aapne provide kiya
  creatorProfile CreatorProfile? @relation("UserCreatorProfile")

  @@index([email])
  @@index([clerkId])
}

model CreatorProfile {
  id           String   @id @default(cuid())
  pageName     String   @unique
  pageUrl      String   @unique
  status       String   @default("DRAFT") // 'DRAFT', 'ACTIVE'

  // === YEH FIELDS ADD KIYE GAYE HAIN ===
  profileImageUrl String?  // Profile photo ke liye
  bannerUrl       String?  // Dashboard ke banner ke liye
  bio             String?  @db.Text // Page description ke liye, @db.Text lambe text ke liye behtar hai
  onboardingStep  Int      @default(2) // Onboarding process track karne ke liye (Step 2 se shuru)

  // Social Links
  youtubeUrl   String?
  instagramUrl String?
  twitterUrl   String?
  facebookUrl  String?
  twitchUrl    String?
  tiktokUrl    String?

  // Relation
  userId       String   @unique
  user         User     @relation("UserCreatorProfile", fields: [userId], references: [id])

  // Timestamps
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}