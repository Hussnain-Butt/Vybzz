# =================================================================
# === V Y B Z Z   -   FINAL & CORRECTED NGINX CONFIGURATION     ===
# =================================================================

# This upstream block points to your API gateway service inside Docker.
upstream api_gateway {
  server api-gateway:3000;
}

# This server block handles redirecting all non-secure HTTP traffic to HTTPS.
server {
  listen 80;
  server_name letsvybzz.com www.letsvybzz.com;
  return 301 https://$server_name$request_uri;
}

# This is the main server block that handles all secure traffic.
server {
  listen 443 ssl http2;
  server_name letsvybzz.com www.letsvybzz.com;

  # SSL Certificate Paths
  ssl_certificate /etc/letsencrypt/live/letsvybzz.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/letsvybzz.com/privkey.pem;

  # Modern SSL/TLS security settings
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_prefer_server_ciphers on;
  
  # The root directory for your compiled frontend app
  root /usr/share/nginx/html;
  index index.html;

  # --- Location Block 1: WebSocket/Live Stream ---
  # This MUST come first. It specifically matches the live streaming path
  # and upgrades the connection to a WebSocket.
  location /stream/ {
    proxy_pass http://api_gateway;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
  }

  # --- Location Block 2: Specific Webhook Routing (THE CRITICAL FIX) ---
  # This block explicitly matches the /webhooks/ path and proxies it.
  # This prevents the 404 error you are seeing.
  location /webhooks/ {
    proxy_pass http://api_gateway;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # --- Location Block 3: General API Routes ---
  # This block handles all other API calls for users, posts, and auth.
  location ~ ^/(users|posts|auth) {
    proxy_pass http://api_gateway;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # --- Location Block 4: Static Assets (JS, CSS, Images) ---
  # This efficiently serves your frontend's static files with long cache times.
  location ~* \.(css|js|jpg|jpeg|png|svg|ico)$ {
    try_files $uri =404;
    expires 1y;
    access_log off;
    add_header Cache-Control "public";
  }

  # --- Location Block 5: Frontend SPA Fallback ---
  # This is the catch-all. Any request that doesn't match above is assumed
  # to be a frontend route, so it serves your index.html.
  location / {
    try_files $uri $uri/ /index.html;
    add_header Cache-Control "no-cache, no-store, must-revalidate";
  }
}